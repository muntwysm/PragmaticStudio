<html>

<h1> movies </h1>

<ul>
	<% @movies.each do |movie|  %>
	<article>
		<header>
			<h2> <%= movie.title  %> </h2>
			<p> <%= movie.description %> </p>
		</header>
		<table>
			<tr> 
				<th>Release Date:</th>
				<td><%= movie.released_on %> </td>
			</tr>
			<tr> 
				<th>Rating:</th>
				<td><%= movie.rating %> </td>
			</tr>
			<tr> 
				<th>Price:</th>
				<td><%= number_to_currency(movie.total_gross) %> </td>
			</tr>
		</table>
	</article>








	<% end %>
</ul>
</html>