<%= link_to "All Events", events_path %>

<article>
		<header>
			<h2> <%= @event.name %> </h2>
			<p> <%= @event.description %> </p>
		</header>
		<table>
			<tr> 
				<th>When:</th>
				<td><%= @event.starts_at().to_s() %> </td>
			</tr>
			<tr> 
				<th>Where:</th>
				<td><%= @event.location %> </td>
			</tr>
			<tr> 
				<th>Price:</th>
				<td><%= format_price(@event) %></td>
			</tr>
		</table>
</article>