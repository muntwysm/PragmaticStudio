<html>

<h1> <%= pluralize(@movies.size,'Movie') %> </h1>

<ul>
	<% @movies.each do |movie|  %>
	<article>
		<header>
			<%= image_for movie  %>
			<h2> <%= link_to movie.title,movie_path(movie)  %> </h2>
			<p> <%= truncate(movie.description, length: 55) %> </p>
		</header>
		<table>
			<tr> 
				<th>Release Date:</th>
				<td><%= movie.released_on.to_s() + " (" + (time_ago_in_words(movie.released_on)).capitalize + " ago)" %> </td>
			</tr>
			<tr> 
				<th>Rating:</th>
				<td><%= movie.rating %> </td>
			</tr>
			<tr> 
				<th>Price:</th>
				<td><%= total_gross(movie) %> </td>
			</tr>
		
		</table>
	</article>
	<% end %>
</ul>
</html>