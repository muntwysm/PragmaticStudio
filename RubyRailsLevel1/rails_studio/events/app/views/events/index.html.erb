<h1> <%= @events.length %> Events </h1>




<% @events.each do |event| %>
	<article>
		<header>
			<h2> <%= event.name  %> </h2>
			<p> <%= event.description %> </p>
		</header>
		<table>
			<tr> 
				<th>When:</th>
				<td><%= event.starts_at %> </td>
			</tr>
			<tr> 
				<th>Where:</th>
				<td><%= event.location %> </td>
			</tr>
			<tr> 
				<th>Price:</th>
				<td><%= number_to_currency(event.price) %> </td>
			</tr>
		</table>
	</article>
<% end %>
