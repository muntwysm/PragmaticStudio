<article>
  <header>
    <h1><%= @movie.title %></h1>
  </header>
  <h2>Description</h2>
  <p>
  <%= image_for(@movie) %>
</p>


  <p>
    <%= @movie.description %>
  </p>
  <h3>Rating</h3>
  <p>
    <%= @movie.rating %>
  </p>
  <h3>Released On</h3>
  <p>
    <%= @movie.released_on %>
  </p>
  <h3>Total Gross</h3>
  <p>
    <%= format_total_gross(@movie) %>
  </p>
</article>
<%= link_to 'Delete', movie_path(@movie), method: :delete, data:{confirm: 'Are you sure?'}  %>
<%= link_to('Edit Movie',edit_movie_path(@movie)) %> |
<%= link_to('All Movies', movies_path) %>