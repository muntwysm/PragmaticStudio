<h1><%= pluralize(Movie.count,'Movie')  %></h1>

<% @movies.each do |movie| %>
  <article>
    <header>
      <h2> <%= link_to(movie.title,movie_path(movie)) %> </h2>
    </header>
    <p>
      <%= truncate(movie.description, {:length => 25 }) %>
    </p>
    <table>
      <tr>
        <th>Released:</th>
        <td><%= movie.released_on.to_s %></td>
      </tr>
      <tr>
        <th>Rating:</th>
        <td><%= movie.rating %></td>
      </tr>
      <tr>
        <th>Total Gross:</th>
        <td><%= format_total_gross(movie) %></td>
      </tr>
    </table>
  </article>
<% end %>