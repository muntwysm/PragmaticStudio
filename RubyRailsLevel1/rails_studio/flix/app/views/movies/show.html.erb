<article>
		<header>
			<h2> <%= @movie.title  %> </h2>
			<p> <%= @movie.description %> </p>
		</header>
		<table>
			<tr> 
				<th>Release Date:</th>
				<td><%= @movie.released_on.to_s() + " (" + (time_ago_in_words(@movie.released_on)).capitalize + " ago)" %> </td>
			</tr>
			<tr> 
				<th>Rating:</th>
				<td><%= @movie.rating %> </td>
			</tr>
			<tr> 
				<th>Total Gross:</th>
				<td><%= total_gross(@movie) %> </td>
			</tr>
		</table>
	</article>

	<%= link_to "Movies",movies_path %>