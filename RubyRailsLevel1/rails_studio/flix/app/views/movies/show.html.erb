<article>
		<header>
			<%= image_for @movie %>
			<h2> <%= @movie.title  %> </h2>
			<p> <%= @movie.description %> </p>
		</header>
		<table>
			<tr> 
				<th>Release Date:</th>
				<td><%= @movie.released_on.to_s() + " (" + (time_ago_in_words(@movie.released_on)).capitalize + " ago)" %> </td>
			</tr>
			<tr> 
				<th>Rating:</th>
				<td><%= @movie.rating %> </td>
			</tr>
			<tr> 
				<th>Total Gross:</th>
				<td><%= total_gross(@movie) %> </td>
			</tr>
				<tr> 
				<th>Duration:</th>
				<td><%= @movie.duration %> </td>
			</tr>
			<tr> 
				<th>Cast:</th>
				<td><%= @movie.cast %> </td>
			</tr>
			<tr> 
				<th>Director:</th>
				<td><%= @movie.director %> </td>
			</tr>


		</table>
	</article>

	<%= link_to "Movies",movies_path %> |

	<%= link_to 'Edit', edit_movie_path(@movie) %> | <%= link_to 'Delete', movie_path(@movie), method: :delete, data: {confirm: 'Are you sure?'} %>